---
type Props = {
  title?: string
  description?: string
}

const {
  title = 'Zak Nesler',
  description = 'Full-stack developer from Philadelphia with a passion for clean design and tidy code.',
} = Astro.props as Props

const domain = 'nesler.dev'
const keywords = [
  'zak nesler',
  'zak',
  'nesler',
  'zaknes',
  'zaknesler',
  'zachary nesler',
]
---

<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta name="author" content={title} />
<meta name="robots" content="index, follow" />
<meta name="msapplication-starturl" content="/" />
<meta name="mobile-web-app-capable" content="yes" />
<meta name="application-name" content={title} />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-title" content={title} />
<meta
  name="apple-mobile-web-app-status-bar-style"
  content="black-translucent"
/>
<meta name="description" content={description} />
<meta name="keywords" content={keywords.join(',')} />
<meta property="og:title" content={title} />
<meta property="og:site_name" content={title} />
<meta property="og:url" content={`https://${domain}`} />
<meta property="og:description" content={description} />
<meta property="og:type" content="website" />
<meta property="og:image" content={`https://${domain}/banner.png`} />
<meta name="p:domain_verify" content="ff1f90db2750254f6843a167a5e5efb8" />
<link rel="icon" type="image/svg" href="/favicon.svg" />
<link rel="icon" type="image/png" sizes="128x128" href="/favicon-128.png" />
<link rel="icon" type="image/png" sizes="96x96" href="/favicon-96.png" />
<link rel="icon" type="image/png" sizes="48x48" href="/favicon-48.png" />
<link rel="apple-touch-icon" type="image/svg" href="/favicon.svg" />
<link
  rel="apple-touch-icon"
  type="image/png"
  sizes="128x128"
  href="/favicon-128.png"
/>
<link
  rel="apple-touch-icon"
  type="image/png"
  sizes="96x96"
  href="/favicon-96.png"
/>
<link
  rel="apple-touch-icon"
  type="image/png"
  sizes="48x48"
  href="/favicon-48.png"
/>
<link rel="manifest" href="/manifest.json" />
<link rel="sitemap" href="/sitemap-index.xml" />
<script defer data-domain={domain} src="https://a.zak.fm/js/script.js"
></script>
